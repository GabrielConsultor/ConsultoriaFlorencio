/*

  # Impede carregamento do site dentro de iframes (clickjacking)
  X-Frame-Options: DENY

  # Ativa proteção extra contra XSS no navegador
  X-XSS-Protection: 1; mode=block

  # Impede detecção automática de MIME
  X-Content-Type-Options: nosniff

  # Política de segurança de conteúdo
  Content-Security-Policy: 
    default-src 'self'; 
    script-src 'self' https://apis.google.com; 
    style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; 
    img-src 'self' data: https://fonts.gstatic.com https://*.whatsapp.net https://*.whatsapp.com; 
    font-src 'self' https://fonts.gstatic.com; 
    connect-src 'self' https://api.whatsapp.com https://forms.netlify.com; 
    frame-ancestors 'none'; 
    form-action 'self' https://forms.netlify.com; 
    upgrade-insecure-requests;

  # Evita que links externos manipulem sua aba
  Referrer-Policy: no-referrer-when-downgrade

  # Força uso de HTTPS sempre
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
